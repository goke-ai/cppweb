{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build debug",
			"command": "cl.exe",
			"args": [
				"/std:c++17",
				// "/W4",
				"/Zi", // /debug
				"/EHsc",
				// "/nologo",
				"/D_WIN32_WINNT=0x0601",
				"/DCROW_ENABLE_DEBUG",
				// "/D_BOOST_DATE_TIME_DYN_LINK",
				// "/D_BOOST_ALL_NO_LIB=1",
				// "/D_BOOST_DATE_TIME_NO_LIB=1",
				"/I",
				"C:\\sdk\\boost_1_77_0",
				// "C:\\sdk\\vcpkg\\installed\\x86-windows\\include",
				"${workspaceFolder}\\src\\server\\*.cpp",
				"${workspaceFolder}\\src\\server\\sqlite3.c",
				"/Fe:", // /out
				"${workspaceFolder}\\build\\debug\\main.exe",
				"/link",
				"/LIBPATH:c:\\sdk\\boost_1_77_0\\stage\\lib"
				// "/LIBPATH:C:\\sdk\\vcpkg\\installed\\x86-windows\\lib"
			],
			"options": {
				"cwd": "${workspaceFolder}\\src\\server"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build release",
			"command": "cl.exe",
			"args": [
				"/std:c++17",
				"/W4",
				"/EHsc",
				// "/nologo",
				"/D_WIN32_WINNT=0x0601",
				"/I",
				"C:\\sdk\\vcpkg\\installed\\x86-windows\\include",
				"${workspaceFolder}\\src\\server\\*.cpp",
				"${workspaceFolder}\\src\\server\\sqlite3.c",
				"/Fe:", // /out
				"${workspaceFolder}\\build\\release\\main.exe",
				"/link",
				"/LIBPATH:C:\\sdk\\vcpkg\\installed\\x86-windows\\lib"
			],
			"options": {
				"cwd": "${workspaceFolder}\\src\\server"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build debug",
			"command": "/usr/bin/g++",
			"args": [
				"${workspaceFolder}/src/server/*.cpp",
				"-std=c++17",
				"-ggdb",
				"-DCROW_ENABLE_DEBUG",
				"-lpthread",
				"-lboost_system",
				"-lsqlite3",
				"-o",
				"${workspaceFolder}/build/debug/main"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/server"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build release",
			"command": "/usr/bin/g++",
			"args": [
				"${workspaceFolder}/src/server/*.cpp",
				"-std=c++17",
				"-lpthread",
				"-lboost_system",
				"-lsqlite3",
				"-o",
				"${workspaceFolder}/build/release/main"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/server"
			},
			"problemMatcher": [
				"$gcc"
			],
			// "group": {
			// 	"kind": "build",
			// 	"isDefault": true
			// },
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build ssl",
			"command": "/usr/bin/g++",
			"args": [
				"${workspaceFolder}/src/server/*.cpp",
				"-std=c++17",
				"-DCROW_ENABLE_SSL",
				"-lssl",
				"-lcrypto",
				"-lpthread",
				"-lboost_system",
				"-lsqlite3",
				"-o",
				"${workspaceFolder}/build/release/main"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/server"
			},
			"problemMatcher": [
				"$gcc"
			],
			// "group": {
			// 	"kind": "build",
			// 	"isDefault": true
			// },
			"detail": "compiler: /usr/bin/g++"
		}
	]
}